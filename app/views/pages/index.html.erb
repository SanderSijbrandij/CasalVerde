<div class="carousel-container">
    <div class="carousel">
        <% @carousel.photos.each do |photo| %>
        <figure>
            <%= image_tag(photo.image_url(:standard)) %>
        </figure>
        <% end %>
    </div>
</div>

<div class="content">
    <div class="home-text-container">
        <div class="home-text-wrapper home-text-hidden" id="home-text-wrapper">
            <% @paragraphs.each do |p| %>
            <div>
                <p><%= p.text%></p>
            </div>
            <% end %>
        </div>
        <a href="#" id="readmore" class="readmore">read more ></a>
    </div>
</div>

<h2 class="headings text-align">Prices</h2>
<div class="content prices-container text-align">
  <% @prices.each do |price| %>
    <div class="well">
      <div class="well-row-group">
        <span><%= price.start_date %></span>
        <span><%= price.end_date %></span>
      </div>
      <% if price.saturdays_only %>
      <div class="well-row-group">
        <span>Check in/out on Saturdays only</span>
      </div>
      <% end %>
      <div class="well-divider"></div>
      <div class="well-column-group">
        <div class="well-row"><span>Minimum nights:</span><span><%= price.min_days %><span></div>
        <div class="well-row"><span>Nightly Price:</span><span><%= money(price.nightly_price) %></span></div>
        <div class="well-row"><span>Price per extra person:</span><span><%= money(price.extra_price) %></span></div>
        <div class="well-row"><span>Service costs:</span><span><%= money(price.service_costs) %></span></div>
      </div>
    </div>
  <% end %>
</div>

<div class="reviews-container">
  <div class="reviews-wrapper">
    <% @reviews.each do |r| %>
    <div class="reviews-item">
      <div class="reviews-header">
        <p><%= r.name %></p>
      </div>
      <div class="reviews-body">
        <p>
          <strong>Stars:
          </strong>
          <% r.stars.times do %>
          <%= image_tag 'full_star.svg', class: 'star', alt: 'full star' %>
          <% end %>
          <% (5 - r.stars).times do %>
          <%= image_tag 'empty_star.svg', class: 'star', alt: 'empty star' %>
          <% end %>
        </p>
        <p><%= r.review %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
