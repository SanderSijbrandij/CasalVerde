<h1>Pages</h1>

<% @pages.each do |page| %>
  <h2><%= page.name.gsub(/[^0-9A-Za-z]/, '').capitalize %></h2>
    <% if page.name != "home_page" %>
      <%= form_for ['admin', page] do |p| %>
        <div class="form-group">
          <%= p.label :hidden %>
          <%= p.check_box :hidden %>
          <%= p.submit "Save", class: "add-page" %>
          <%= button_to "Delete", admin_page_path(page), confirm: "Are you sure? Once deleted, all your text is gone!", method: :delete, class: "delete-paragraphs" %>
        </div>
        <div class="form-group">

        </div>
      <% end %>
    <% end %>
      <%= button_to "Edit paragraphs", admin_page_paragraphs_path(page.id), class: "add-page" %>

      <hr>
<% end %>

<h1>Add new page</h1>
<%= form_for ['admin', @page] do |f| %>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
  <div class="form-group">
    <%= f.submit "Add", class: "add-page" %>
  </div>
<% end %>
