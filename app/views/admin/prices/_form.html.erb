<%= form_for ['admin', @price] do |f| %>
  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.date_field :start_date, placeholder: :start_date %>
  </div>
  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.date_field :end_date, placeholder: :end_date %>
  </div>
  <div class="form-group">
    <%= f.label :min_days %>
    <%= f.number_field :min_days, placeholder: :min_days, min: 1, max: 7 %>
  </div>
  <div class="form-group">
    <%= f.label :saturdays_only %>
    <%= f.check_box :saturdays_only %>
  </div>
  <div class="form-group">
    <%= f.label :weekly_price %>
    <%= f.number_field :weekly_price, placeholder: :weekly_price, min: 0.00, max: 10000.00, step: "50.00" %>
  </div>
  <div class="form-group">
    <%= f.label :extra_price %>
    <%= f.number_field :extra_price, placeholder: :extra_price, min: 0.00, max: 10000.00, step: "10.00" %>
  </div>
  <div class="form-group">
    <%= f.label :service_costs %>
    <%= f.number_field :service_costs, placeholder: :service_costs, min: 0.00, max: 10000.00, step: "25.00" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", id: "add-form-button" %>
    <% unless @price.new_record? %>
      <%= link_to "<< Back", admin_prices_path %>
    <% end %>
  </div>
<% end %>
