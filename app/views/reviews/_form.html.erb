<%= form_for @review do |f| %>
  <% if @review.errors.any? %>
    <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <label>What is your name?</label>
  <%= f.text_field :name %> <br>

  <label>How many stars would you give us?</label>
  <%= f.select(:stars, options_for_select([['★', "1"], ['★★', "2"], ['★★★', "3"], ['★★★★', "4"], ['★★★★★', "5"]], "5")) %> <br>

  <label>How would you describe your stay?</label>
  <%= f.text_area :review %> <br>

  <%= f.submit "Enter review" %>

<% end %>

<style>
  #review_stars option[value="1"] {
    color: red;
  }
</style>
