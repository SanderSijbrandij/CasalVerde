<%= form_for @review, id: "review_form",html:{ class: 'content_form short'} do |f| %>

<div>
    <label id="name_label">What is your name?</label>
    <%= f.text_field :name %>
</div>

<div>
    <label id="star_label">How many stars would you give us?</label>
    <%= f.select(:stars, options_for_select([['★', "1"], ['★★', "2"], ['★★★', "3"], ['★★★★', "4"], ['★★★★★', "5"]], "5")) %>
</div>

<div>
    <label id="review_label">How would you describe your stay?</label>
    <%= f.text_area :review %>
  </div>

<button type="submit" name="button" class="submit">Enter review</button>

<% end %>

<style>
    #review_stars option[value="1"] {
        color: red;
    }

</style>
